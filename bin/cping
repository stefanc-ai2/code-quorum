#!/usr/bin/env python3
"""
cping command entry point
Test connectivity with Codex
"""

import sys
import os
import argparse
from pathlib import Path

script_dir = Path(__file__).resolve().parent
lib_dir = script_dir.parent / "lib"
sys.path.insert(0, str(lib_dir))
from compat import setup_windows_encoding
setup_windows_encoding()

try:
    from codex_comm import CodexCommunicator

    def main():
        try:
            parser = argparse.ArgumentParser(prog="cping", add_help=True)
            parser.add_argument("--session-file", dest="session_file", default=None, help="Path to .codex-session (or .ccb_config/.codex-session)")
            args = parser.parse_args()
            if args.session_file:
                os.environ["CCB_SESSION_FILE"] = str(args.session_file)
            comm = CodexCommunicator()
            healthy, message = comm.ping(display=False)
            print(message)
            return 0 if healthy else 1

        except Exception as e:
            print(f"[ERROR] Connectivity test failed: {e}")
            return 1

    if __name__ == "__main__":
        sys.exit(main())

except ImportError as e:
    print(f"[ERROR] Module import failed: {e}")
    print("Please ensure codex_comm.py is in the same directory")
    sys.exit(1)
